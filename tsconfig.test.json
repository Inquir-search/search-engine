{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": true,
        "allowImportingTsExtensions": false,
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "examples"
    ]
}