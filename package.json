{
  "name": "@inquir/search-engine",
  "version": "1.0.1",
  "description": "A high-performance, full-featured search engine with BM25 scoring, fuzzy search, geo-distance queries, and unified query syntax",
  "type": "module",
  "main": "dist/index.js",
  "module": "src/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "files": [
    "src/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --project tsconfig.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "clean": "rm -rf dist/",
    "prepublishOnly": "npm run build && npm test",
    "start": "tsx server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:all": "vitest run",
    "test:tokenizer": "vitest run tests/tokenizer.test.js",
    "test:inverted-index": "vitest run tests/inverted-index.test.js",
    "test:mappings": "vitest run tests/mappings-manager.test.js",
    "test:query-engine": "vitest run tests/query-engine.test.js",
    "test:ranking": "vitest run tests/ranking-pipeline.test.js",
    "test:bm25": "vitest run tests/bm25-scorer.test.js",
    "test:integration": "vitest run tests/search-engine-integration.test.js",
    "test:query": "vitest run tests/query.test.js",
    "test:comprehensive": "vitest run tests/comprehensive-query.test.js",
    "test:ddd": "vitest run tests/ddd-integration.test.js",
    "test:smoke": "vitest run tests/simple-smoke.test.js",
    "test:typescript": "vitest run tests/typescript-migration.test.ts",
    "demo": "node examples/demo.js",
    "dev": "tsx watch src/index.ts"
  },
  "keywords": [
    "search",
    "search-engine",
    "full-text-search",
    "BM25",
    "fuzzy-search",
    "geo-search",
    "elasticsearch-like",
    "text-indexing",
    "information-retrieval",
    "query-dsl",
    "faceted-search",
    "nodejs",
    "typescript",
    "inverted-index"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Inquir-search/search-engine.git"
  },
  "bugs": {
    "url": "https://github.com/Inquir-search/search-engine/issues"
  },
  "homepage": "https://github.com/Inquir-search/search-engine",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "cld": "^2.10.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^3.2.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jest": "^30.0.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  }
}
